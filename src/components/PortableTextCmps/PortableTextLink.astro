---
import Link from "@components/Link.astro";

const { markDef } = Astro.props.node;

const type = markDef?.type;
---

<Link class="link hover-text" {...(((type === "external" && markDef?.externalTarget) && { href: markDef?.externalTarget }) || ((type === "internal" && markDef?.internalTarget) && { to: markDef?.internalTarget }))}>
	<slot />
</Link>