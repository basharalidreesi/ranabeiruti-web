---
const { node } = Astro.props;

const {
	code,
	aspectRatio,
} = node;
---

{code && (
	<div class="embed-object" data-type="code" set:html={code} style={{ "--embed-aspect-ratio": aspectRatio }} />
)}

<style lang="scss" is:global>
	.embed-object {
		position: relative;
		overflow: hidden;
		aspect-ratio: var(--embed-aspect-ratio);
	}
	.embed-object iframe {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
	}
</style>